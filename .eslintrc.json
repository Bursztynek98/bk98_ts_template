{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./src/client/tsconfig.json",
      "./src/server/tsconfig.json",
      "./src/shared/tsconfig.json"
    ]
  },
  "ignorePatterns": ["build.mjs"],
  "plugins": ["prettier"],
  "rules": {}
}
