{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "types": ["@citizenfx/server", "@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noEmit": true,
    "paths": {
      "@shared/*": ["./*"]
    }
  },
  "include": ["./"]
}
